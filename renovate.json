{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "registry.access.redhat.com/ubi9/go-toolset"
      ],
      "allowedVersions": "<2"
    },
    {
      "description": "Automerge GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    }
  ]
}
